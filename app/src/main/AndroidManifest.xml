        <activity android:name=".PosLoginActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />  <!--//这一句属性 的意思要设置其作为初始启动Activity-->
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.HOME" />   <!--用于返回的首界面，和上面差不多-->
