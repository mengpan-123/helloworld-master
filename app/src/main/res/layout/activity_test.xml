<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainColor"
    >



    <!-- 只有这种线性的布局才支持使用属性
        android:layout_weight="1"进行均等分

       同时可以设置每一个的间距，和最右边的间距之后，所有控件的位置就会均等分
      -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        >





    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/group1_ex"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_height="65dp"
            android:text="扫描商品条形码\n放入购物车"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_marginLeft="22dp"
            />



        <TextView
            android:id="@+id/group2_ex"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_height="65dp"
            android:layout_marginLeft="22dp"
            android:text="手机扫码或\n刷脸支付订单"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/group3_ex"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="65dp"
            android:gravity="center"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:text="支付成功走专属通道"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/faceinit"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_height="65dp"
            android:text="微信人脸支付初始化"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_marginLeft="22dp"
            />



        <TextView
            android:id="@+id/facegetdata"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_height="65dp"
            android:layout_marginLeft="22dp"
            android:text="获取数据和调用凭证"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/getuserinfo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="65dp"
            android:gravity="center"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:text="获取用户信息,不做支付的"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:layout_marginTop="50dp">



        <TextView
            android:id="@+id/facecard"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_height="65dp"
            android:layout_marginLeft="22dp"
            android:text="人脸准备支付"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/result"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="65dp"
            android:gravity="center"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:text="实际结果"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

    </LinearLayout>
</LinearLayout>