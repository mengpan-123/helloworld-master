<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EEF7FA"
    tools:context=".InputGoodsActivity">
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:background="#0FB6A4"
        android:orientation="horizontal">
        <!--公司logo-->
        <LinearLayout
            android:layout_width="120dp"
            android:layout_marginLeft="10dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/logo" />
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <!--会员号和会员图标-->
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:background="@drawable/huiyuan" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="176****1111"
                android:textSize="14dp"
                android:textColor="#F0F0F0"
                android:gravity="center"/>
        </LinearLayout>
        <!--首页和首页图标-->
        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="30dp"
                android:layout_marginTop="5dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/shouye"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="首页"
                android:textColor="#F0F0F0"
                android:textSize="14dp"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/listtop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/prodlist"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:textColor="#090909"
            android:text="商品列表"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/shanchu"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:textColor="#090909"
            android:text="清空"/>
    </LinearLayout>
    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:childIndicator="@null"
        android:groupIndicator="@null" >
    </ListView>


    <!--<ListView
        android:id="@+id/listbag"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginLeft="240dp"
        android:visibility="visible"
        android:headerDividersEnabled="true"
        android:stackFromBottom="true"></ListView>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical" >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/fg"/>
        <LinearLayout
            android:id="@+id/buttom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--商品数量-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:textSize="16dp"
                    android:textColor="#111111"
                    android:text="共9件商品"
                    android:id="@+id/shopcar_num"
                    android:gravity="center"/>
            </LinearLayout>
            <!--优惠金额-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:textSize="16dp"
                    android:textColor="#111111"
                    android:text="优惠5"
                    android:gravity="center"/>
            </LinearLayout>
            <!--应付金额-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:id="@+id/tv_total_price"
                    android:textSize="16dp"
                    android:textColor="#111111"
                    android:text="应付5555"
                    android:gravity="center"/>
            </LinearLayout>
            <!--购物袋-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="30dp"
                android:onClick="input_bags">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:background="@drawable/gwd" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="购物袋"
                    android:gravity="center"/>
            </LinearLayout>
            <!--手动输入商品编码-->
            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:onClick="input_tiaoma">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:background="@drawable/inputtm"/>
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="手输条码"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <Button
                android:id="@+id/tv_go_to_pay"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:text="去付款"
                android:textSize="20dp"
                android:background="@drawable/button_shape"
                android:textColor="#F0F0F0"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>