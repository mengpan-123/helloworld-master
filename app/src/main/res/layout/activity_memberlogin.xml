<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/member_login"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/l2"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/login"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="登  录"
                android:gravity="center"
                android:textColor="#0F0F0F"
                android:textSize="20dp" />
            <TextView
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:layout_marginRight="10dp"
                android:text="X"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#494747"
                android:id="@+id/closemem"/>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/fg"/>
    </LinearLayout>

    <!--顶部输入框-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/l1">
        <EditText
            android:id="@+id/phoneorhyNum"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:ems="10"
            android:textColor="#0F0F0F"
            android:hint="请输入手机号/会员号"
            android:inputType="textPersonName"
            android:text=""
            android:textSize="20dp" />
    </LinearLayout>
    <!--数字1、2、3-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        >
        <Button
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:text="1"
            android:id="@+id/btn1"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            android:onClick="numClick"
            />
        <Button
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:text="2"
            android:textSize="20dp"
            android:onClick="numClick"
            android:layout_marginLeft="10dp"/>
        <Button
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:text="3"
            android:textSize="20dp"
            android:onClick="numClick"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
    <!--数字4、5、6-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <Button
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:text="4"
            android:textSize="20dp"
            android:onClick="numClick"
            android:layout_marginLeft="15dp"/>
        <Button
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:text="5"
            android:textSize="20dp"
            android:onClick="numClick"
            android:layout_marginLeft="10dp"/>
        <Button
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:text="6"
            android:textSize="20dp"
            android:onClick="numClick"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <!--数字7、8、9-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <Button
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:text="7"
            android:textSize="20dp"
            android:onClick="numClick"
            android:layout_marginLeft="15dp"/>
        <Button
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:text="8"
            android:textSize="20dp"
            android:onClick="numClick"
            android:layout_marginLeft="10dp"/>
        <Button
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:text="9"
            android:textSize="20dp"
            android:onClick="numClick"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <!--数字0和删除按钮-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <Button
            android:layout_width="190dp"
            android:layout_height="60dp"
            android:text="0"
            android:textSize="20dp"
            android:onClick="numClick"
            android:layout_marginLeft="15dp"/>
        <Button
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:text="X"
            android:textSize="20dp"
            android:onClick="deleteClick"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <!--确定和取消按钮-->
    <LinearLayout
        android:id="@+id/ll_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="240dp"
            android:background="@drawable/button_shape"
            android:layout_height="40dp"
            android:textColor="#F0F0F0"
            android:text="确 定"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:id="@+id/closeHy"
            />
    </LinearLayout>
</LinearLayout>