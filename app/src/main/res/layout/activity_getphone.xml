<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/tv_company"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:drawableLeft="@mipmap/logo"
            android:gravity="center"

            android:text="武汉众诚卓越"
            android:textColor="@color/mainColor"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:text="退出"
            android:textColor="@color/mainColor"
            android:textSize="16sp" />

    </RelativeLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@mipmap/center"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"

        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="470dp"
        android:adjustViewBounds="true"
        android:background="@color/mainColor"
        >

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@mipmap/group1"
           android:layout_marginTop="130dp"
            android:layout_marginLeft="50dp"
            />

        <TextView
            android:id="@+id/group1_ex"
            android:layout_width="115dp"
            android:layout_height="65dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="35dp"
            android:text="扫描商品条形码\n放入购物车"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@mipmap/group2"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="170dp"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/group2_ex"
            android:layout_width="115dp"
            android:layout_height="65dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="145dp"
            android:text="手机扫码或\n刷脸支付订单"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@mipmap/group3"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="290dp"
            />
        <TextView
            android:id="@+id/group3_ex"
            android:layout_width="90dp"
            android:layout_height="65dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="275dp"
            android:text="支付成功走专属通道"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />
        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="75dp"
            android:background="@color/buttonColor"
            android:text="自助结账"
            android:onClick="onLogin"
            android:textSize="18sp"
            android:textColor="#FFFFFF" >

        </Button>

        <TextView
            android:id="@+id/tv_hylogin"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:drawableLeft="@mipmap/hy_logo"
            android:gravity="center"
            android:drawableRight="@mipmap/login"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:text="会员登陆"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />


</RelativeLayout>

</LinearLayout>