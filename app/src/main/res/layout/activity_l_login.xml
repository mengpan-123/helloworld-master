<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorgreen"
    >


    <!-- 白色的边框背景-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/borderinfo"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="120dp"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp"
        >

        <TextView
            android:id="@+id/title_sm"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="信息录入"
            android:textColor="@color/colorgreen"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/borderbutton"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            >

            <TextView
                android:id="@+id/title_khid"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="门 店 号"
                android:textColor="#666"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/inputkhid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:lines="1"
                android:padding="10dp"
                android:singleLine="true"
                android:text=""
                android:textColorHint="#95A1AA"
                android:textSize="17sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/borderbutton"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/title_machine"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="机器编号"
                android:textColor="#666"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/inputmachine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"

                android:lines="1"
                android:padding="10dp"
                android:singleLine="true"
                android:text=""
                android:textColorHint="#95A1AA"
                android:textSize="17sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"

            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/explain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="提示：本消息请谨慎录入，一旦写入后，将不可更改。该参数请如实填写"
                android:textColor="#E5530B"
                android:textSize="16sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            >
        <Button
            android:id="@+id/Login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:background="@color/colorgreen"
            android:text="确  定"
            android:textColor="#ffffff"
            android:textSize="22sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>